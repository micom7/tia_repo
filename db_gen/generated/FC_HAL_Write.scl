FUNCTION "FC_HAL_Write" : VOID
{ S7_Optimized_Access := 'TRUE' }
VERSION : 1.0

VAR_IN_OUT
    Redler : ARRAY[*] OF "UDT_Redler";
    Noria  : ARRAY[*] OF "UDT_Noria";
    Gate   : ARRAY[*] OF "UDT_Gate2P";
    Fan    : ARRAY[*] OF "UDT_Fan";
END_VAR

BEGIN
    // ===================================================================
    // REDLERS
    // ===================================================================
    // Редлер_1 (Slot 0, Силос 1, Підвал)
    "Redler_1_DO_Run" := Redler[0].DO_Run;

    // Редлер_2 (Slot 1, Силос 2, Підвал)
    "Redler_2_DO_Run" := Redler[1].DO_Run;

    // ===================================================================
    // NORIAS
    // ===================================================================
    // Норія_1 (Slot 50, Башта 1)
    "Noria_1_DO_Run" := Noria[0].DO_Run;

    // Норія_2 (Slot 51, Башта 2)
    "Noria_2_DO_Run" := Noria[1].DO_Run;

    // ===================================================================
    // GATES
    // ===================================================================
    // Засувка_1 (Slot 100, Силос 1, Низ)
    "Gate_1_DO_Open" := Gate[0].DO_Open;
    "Gate_1_DO_Close" := Gate[0].DO_Close;

    // Засувка_2 (Slot 101, Силос 2, Низ)
    "Gate_2_DO_Open" := Gate[1].DO_Open;
    "Gate_2_DO_Close" := Gate[1].DO_Close;

    // ===================================================================
    // FANS
    // ===================================================================
    // Вентилятор_1 (Slot 150, Силос 1, Верх)
    "Fan_1_DO_Run" := Fan[0].DO_Run;

END_FUNCTION
